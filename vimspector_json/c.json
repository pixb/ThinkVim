{
  "configurations": {
    "Launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "program": "/bin/nvim",
        "args": [  ],
        "cwd": "${workspaceRoot}",
        "environment": [
            { "name": "VIMRUNTIME", "value": "${workspaceRoot}/runtime" }
        ],
        "externalConsole": true,
        "MIMode": "gdb"
      }
    },
    "Attach": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "attach",
        "program": "/bin/nvim",
        "MIMode": "gdb"
      }
    }
  }
}
